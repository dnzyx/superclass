<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.01"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="166dp"
            android:layout_weight="1"
            android:background="#4499ee"
            app:srcCompat="@drawable/main_window_park1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_ad2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.56"
            app:srcCompat="@drawable/ad2" />

        <ImageView
            android:id="@+id/iv_ad"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.60"
            app:srcCompat="@drawable/ad1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_moreApplication"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            app:srcCompat="@mipmap/index_moreapplication" />

        <ImageView
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>