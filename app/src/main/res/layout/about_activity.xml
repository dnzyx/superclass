<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@drawable/aboutbg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="372dp"
        android:layout_weight="0.73">

        <LinearLayout
            android:id="@+id/about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="66dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/about_imv_logo"
                android:layout_width="104dp"
                android:layout_height="110dp"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/touxiang" />

            <TextView
                android:id="@+id/about_tv_appname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:text="超机课程表"
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/about_tv_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/version"
                android:textColor="#000"
                android:textSize="18sp" />

        </LinearLayout>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="31dp"
            android:gravity="center"
            android:text="开发人员：dnzyx，EmmaLuo2"
            android:textColor="#555"
            android:textSize="15sp"
            android:layout_below="@+id/about"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>


    <TextView
        android:id="@+id/about_tv_atention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="15dp"

        android:text="登录/注册即视为同意用户服务协议及隐私权政策,完成后可直接使用该账户登录本公司所有产品!" />

</LinearLayout>